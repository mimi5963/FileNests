package filenest.util;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;

import filenest.domain.Document;

public class IOUtil {
	private static FileOutputStream fos;
	private static FileInputStream fis;
	
	public void writeDocumentPdf(Document document) {
		
		try {
			fos = new FileOutputStream(document.path()+File.separator+document.getDocumentStatus().getversionName());
			fos.write("------------------------".getBytes());
			fos.write("문서 제목"+);
			fos.write(("작성자 : "+document.getCustomer().getName()).getBytes());
			fos.write("문서 분류 : "+document.getDocumentCode());
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
	
}
